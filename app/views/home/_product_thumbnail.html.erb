<div class="item thumbnail product_filter_model_<%= product.product_model.id %> <%= product.gen_attribute_filter_ids %> <%= "for_buying" if product.for_buy %> <%= "for_selling" if product.for_sell %>">
  <div class="box">
    <div class="product_title" style="color:#fa3e6e; font-family:'myriad-s'; font-size:15px;" title="<%= product.title %>"><%= product.title %></div>
    <div class="product_image thumbnail"><img title="<%= product.title %>" src="<%= product.main_image_url(:thumb) %>"></div>
    <div>
      <div class="button_for_sell dropdown" id= "button_block">
        <div>
          <a href="#" onclick="show_hide_price_popup('popup_select_price_<%= product.id %>');" id="dLabel" class="btn btn-primary dropdown-toggle select-price"title="Sell now: <%= product.title %>" data-toggle="dropdown">Sell</a>
          <div id="popup_select_price_<%= product.id %>" class="popup_select_price hidden_filter" style="position:relative;">
            <% if product.has_flawless_type? %>
              <div class="price_type" product-id="<%= product.id %>" product-price="<%= product.price_for_sell %>" product-using_condition="Flawless" >
                <label for="Flawless"><%= product.flaw_less_name %></label>
                <span class="product_desc"><%= format_num(product.price_for_sell)%> </span>
                <span class="show_honey_symbol"><img src="/images/honey_20px_grey.png"></span>
              </div>
            <% end %>
            <% if product.has_good_type? %>
              <div class="price_type" product-id="<%= product.id %>" product-price="<%= product.price_for_good_sell %>" product-using_condition="Good" >
                <label for="Good">Good</label>
                <span class="product_desc"><%= format_num(product.price_for_good_sell)%> </span>
                <span class="show_honey_symbol"><img src="/images/honey_20px_grey.png"></span>
              </div>
            <% end %>
            <% if product.has_poor_type? %>
              <div class="price_type" product-id="<%= product.id %>" product-price="<%= product.price_for_poor_sell %>" product-using_condition="Poor" >
                <label for="Poor">Poor</label>
                <span class="product_desc"><%= format_num(product.price_for_poor_sell)%> </span>
                <span class="show_honey_symbol"><img src="/images/honey_20px_grey.png"></span>
              </div>
            <% end %>
          </div>
        </div>
        <div>
 		     <a href="/products/<%= product.id %>?for=buy" class="btn btn-primary" title="Buy now: <%= product.title %>">Buy</a>
        </div>
      </div>
    </div>
  </div>
</div>