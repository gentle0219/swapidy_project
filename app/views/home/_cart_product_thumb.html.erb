<li>
	<div class="cart_product_thumb hovergallery" data-hover="dropdown" data-delay="1000" style="display: inline-table; width: 95px;margin: 0 0 5px 0;" title="<%= order_product.title %> " >
		<a class="del-product" href="#" title="Delete" order_product_id="<%= order_product.order_product_id %>" ></a>
		<img style=" max-width: 80px;max-height: 100px;position: absolute; top: 0; vertical-align: middle;" src="<%= order_product.product.main_image_url(:thumb) if order_product.product %>" />
		<span style="position: absolute; top: 100px;text-align: center;margin: 0 10px"> <%= order_product.using_condition %></span>
	</div>
</li>
<style type="text/css">
	.hovergallery div {
		-webkit-transform: scale(0.8);
		-moz-transform: scale(0.8);
		-o-transform: scale(0.8);
		-webkit-transition-duration: 0.5s;
		-moz-transition-duration: 0.5s;
		-o-transition-duration: 0.5s;
		opacity: 0.7;
		margin: 0 10px 5px 0;
	}
	.hovergallery img:hover {
		-webkit-transform: scale(1.1);
		-moz-transform: scale(1.1);
		-o-transform: scale(1.1);

		opacity: 1;
	}
	.del-product{
		position: relative;
		top:0;
		z-index:10000;
	}
</style>
