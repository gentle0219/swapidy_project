  body {
    background: whitesmoke;
  }
  dt:hover {
    cursor: pointer;
  }
  dt {
    color: #38B4DE;
    cursor: pointer;
  }
  dd {
    color: #666;
  }
  .faq_cat{
        color: #38B4DE;
        font-size: 20px;
