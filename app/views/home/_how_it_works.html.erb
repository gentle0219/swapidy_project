      $(this).next().slideToggle('normal');
      $('#heading_for_buy').next().hide();
      // Toggle dd when the respective dt is clicked
        $(".s1").fadeIn(2000);
        $(".s2").delay(1000).fadeIn(1000);
        $(".s3").delay(2000).fadeIn(1000);
    });
  }); 
</script>

