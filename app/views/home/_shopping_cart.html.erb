<div id="product_items" style="height: 130px;">
  <% if cart_products_empty? %>
    <div style="width: 100%; text-align: center; padding-top: 40px;"> <span class="headings_pink">Empty Shopping Cart</span></div>  
  <% else %>
  	  <% if cart_products[:sell].count > 3 %>
 	  <button class="prev" style="width: 30px;position: absolute;top:50px;left: 20px"><<</button>
 	  <button class="next" style="width: 30px;position: absolute;top: 50px;left: 350px;">>></button>
 	  <%end%>
      <div class= "sell_display " style=" height:120px; position:absolute; left:0px; width: 500px;margin: 5px 0 5px 100px;" >
       	<ul>
        <% cart_products[:sell].each do |order_product|%>
       		<%= render :partial => "/home/cart_product_thumb", :locals => {:order_product => order_product} %>
        <% end %>
        </ul>
      </div>
      <div style="position:absolute; left:50%; margin-left:-100px; width: 200px; text-align: center; top: 30px; font-size: 35px;">
        $<%= format_num(cart_amount) %>
      </div>
       <% if cart_products[:buy].count > 3 %>
         <button class="prev_buy" style="width: 30px;top: 50px;right: 410px;position: absolute"><<</button>
 	  	 <button class="next_buy"style="width: 30px;top: 50px;right: 80px;position: absolute">>></button>
       <%end%>
      <div class="buy_display" style="left:900px !important ;top:-130px; height: 130px" >
         <ul>
        	<% cart_products[:buy].each do |order_product| %>
          		<%= render :partial => "/home/cart_product_thumb", :locals => {:order_product => order_product}%>
        	<% end %>
         </ul>
      </div>
    <a href="javascript:goto_checkout();" style="height: 20px; top: 60px; position: absolute; left: 50%; margin-left: -83px;" class="btn show_button_buy">Checkout</a>
  <% end %>
</div>

<style>
.see_more_sell{
	position: absolute;
	top: 50px;
	left: 500px;
}
.see_more_buy{
	position:absolute;
	top: 50px;
	right: 500px;
}
.dropdow_item{
	position:absolute;
	display: inline-block;
	width: 0;
	height: 0;
	vertical-align: top;
	border-top: 10px solid black;
	border-right: 10px solid transparent;
	border-left: 10px solid transparent;
	margin-top:40px;
	-moz-transform:rotate(0deg);
	-webkit-transform:rotate(0deg);
}	
.hide_item {
	display: block;
	top: 10px;
	right:-7px;
	width: 10px;
	height: 10px;
	vertical-align: top;
	border-top: 10px solid black;
	border-right: 10px solid transparent;
	border-left: 10px solid transparent;
	margin-top:40px;
 	-moz-transform:rotate(-45deg);
  	-webkit-transform:rotate(180deg);
}
</style>
<script type="text/javascript">
	$(function() {
     $('.sell_display').jCarouselLite({
        btnNext: ".next",
        btnPrev: ".prev",
         visible: 3,
          scroll: 2,
          speed: 500
	 });
	 
	$('.buy_display').jCarouselLite({
        btnNext: ".next_buy	",
        btnPrev: ".prev_buy",
         visible: 3,
          scroll: 2,
          speed: 500
	 });

	});
</script>

