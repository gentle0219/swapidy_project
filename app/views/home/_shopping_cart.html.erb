<% if cart_products_empty? %>
  <div id="product_items" style="height: 130px; min-width:600px;">
    <div style="width: 100%; text-align: center; padding-top: 40px;"> <span class="headings_pink">Empty Shopping Cart</span></div>
    <a href="#" onclick="$('#shopping_cart').fadeOut('slow'); show_checkout_bar = false;" style="height: 20px; top: 70px; position: absolute; left: 50%; margin-left: -83px;" class="btn show_button_buy" id= "close_shopping_cart" >Close</a>
  </div>
<% else %>
  	<a style="position: absolute; left: 0; bottom: 50%; background-color: #38B4DE; padding: 5px;">My old stuff</a>
  	<a style="position: absolute; right: 0; bottom: 50%; background-color: #fa3e6e; padding: 5px;">My new stuff</a>
  	<a id="icon_sell" href="javascript:showScreenToSell();" title="Add Sell" style="position: absolute;top:80px;width: 40px;height: 30px;left: 20px"><img src="/images/add-sell.ico" /></a>
  	<a id="icon_buy" href="javascript:showScreenToBuy();" title="Add Buy" style="position: absolute;top:80px;width: 40px;height: 30px;right: 20px"><img src="/images/add-buy.ico" /></a>
 	<% if cart_products[:sell].count <= 1 %>
  	<div class= "checkout_bar_step1">
 	<% elsif cart_products[:sell].count == 2%>
 		<div class= "checkout_bar_step2">
 	<% else%>
 		<div class= "checkout_bar_step3">
	<% end %>
  	<% if cart_products[:sell].count > 3 %>
	 	  <button class="prev" style="width: 30px;position: absolute;top:50px;left: 150px">&lt;&lt;</button>
	 	  <button class="next" style="width: 30px;position: absolute;top: 50px;left: 480px;">&gt;&gt;</button>
 	  <% end %>
      <div class = "sell_display step_sell_1" style="width:100% !important;">
       	<ul style="position: none;">
        <% cart_products[:sell].each do |order_product|%>
       		<%= render :partial => "/home/cart_product_thumb", :locals => {:order_product => order_product} %>
        <% end %>
        </ul>
      </div>
   </div>
  <% if cart_products[:buy].count <=1  %>
  	<div class= "checkout_bar_buy1">
  <% elsif cart_products[:buy].count == 2%>
 		<div class= "checkout_bar_buy2">
  <% else%>
 		<div class= "checkout_bar_buy3">
  <% end %>
    <% if cart_products[:buy].count > 3 %>
      <button class="prev_buy" style="width: 30px;top: 50px;right: 500px;position: absolute">&lt;&lt;</button>
 	  	<button class="next_buy"style="width: 30px;top: 50px;right: 180px;position: absolute">&gt;&gt;</button>
	  <% end %>
        <div class="buy_display step_buy_1"style="width:100% !important;">
	      <ul style="position: none;">
	      	<% cart_products[:buy].each do |order_product| %>
	        	<%= render :partial => "/home/cart_product_thumb", :locals => {:order_product => order_product}%>
	      	<% end %>
	      </ul>
	    </div>
	</div> 
	<div style="position:absolute; left:50%; margin-left:-125px; min-width: 250px; text-align: center; top: 30px; font-size: 25px;">
	  <% if cart_amount > 0 %>
	  	<% if current_user && current_user.balance_amount && current_user.balance_amount > 0 %>
	    	You pay: $<%= format_num(cart_amount) %> - $<%= format_num(current_user.balance_amount) %>
	  	<% else %>
	  	<span class="show_result" style="display: none;">  You pay: $<%= format_num(cart_amount) %> </span>
	  	<% end %>
	  <% else %>
	  	<span class="show_result" style="display: none;">You get: $<%= format_num(-cart_amount) %></span>
	  <% end %>
	</div>
	<p id = "text_buying" style="text-align: center; font-size: 25px;color: #A90329;display: none;height: 20px; top: 60px; position: absolute; left: 50%; margin-left: -83px;"> Buying </p>
	<a id="done_button" href="javascript:showScreenToBuy();" style="height: 20px; top: 60px; position: absolute; left: 50%; margin-left: -83px;" class="btn show_button_sell">Swap for...</a>
	<a id="checkout_button" href="javascript:gotoCheckout();" style="display: none; height: 20px; top: 60px; position: absolute; left: 50%; margin-left: -83px;" class="btn show_button_buy">Checkout</a>
	<a id="done_button_for_buy"  href="javascript:showScreenToTrade();" style="height: 20px; top: 60px; position: absolute;display:none; left: 50%; margin-left: -83px;" class="btn show_button_buy">Done</a>
<% end %>
