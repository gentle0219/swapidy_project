<%= form_for(@payment, :as => 'payment', :url => "/payments/create") do |f| %>
  <%= f.hidden_field :amount %>
  <%= f.hidden_field :new_stripe_card_token %>
  <%= f.hidden_field :new_card_type %>
  <%= f.hidden_field :new_card_last_four_number %>
  <%= f.hidden_field :new_card_name %>
  <%= f.hidden_field :new_card_expired_month %>
  <%= f.hidden_field :new_card_expired_year %>
  
  <h2>Confirm Honey money to buy</h2>
  <div>
    <label>Amount:</label><br/>
    <strong>$<%= format_num(@payment.amount, 2) %></strong>
  </div>
  <div>
    <label>Honey money amount:</label><br/>
    <strong><%= format_num(@payment.honey_money) %> Honey</strong>
  </div>
  <br/>
  <div>
      <span>Your current balance is:</span>
      <span><b><%= format_num(current_user.honey_balance) %> Honey</b></span><br />
      <span>After payment, your balance will be: </span>
      <span><b><%= format_num(@payment.honey_money + current_user.honey_balance) %> Honey</b></span>
  </div>
  <br/>
  <h2>Card Information</h2>
  <%= render :partial => "/shared/card_info", :locals => {:card => @payment.new_card_info ? @payment.new_card_info : @payment.card_info_in_hash }%>
  <br/>
  <div>
    <%= f.submit "Do payment" %>
  </div>    
<% end %>
