<%= form_for(@order, :as => 'order', :url => "/orders/shipping_info", :html => {:id => "new_order"}) do |f| %>
  <%= f.hidden_field :shipping_first_name %>
  <%= f.hidden_field :shipping_last_name %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :shipping_optional_address %>
  <%= f.hidden_field :shipping_city %>
  <%= f.hidden_field :shipping_state %>
  <%= f.hidden_field :shipping_zip_code %>
  <%= f.hidden_field :shipping_country %>
  
  <div class="payment_product_info"><br/>
    <label style="color:#666; padding-top: 10px;">Current Balance:</label>
    <span style="color:#666; font-family:'myriad'"><%= format_num(current_user.balance_amount) %> </span><img class="payment_currency" src="/images/honey_20px_grey.png">
  </div>
  <div style="position:relative; bottom:20px;">
    <label style="color:#666; font-family:'myriad';">Product Price:</label><span style="color:#666; font-family:'myriad'; font-size:20px;">&nbsp;<%= format_num(cart_amount) %> </span><img class="payment_currency" src="/images/honey_20px_grey.png">
  </div>
  <% if current_user.extra_money_for(cart_amount) <= 0 %>
    <div >
      <br/>
      <span style="font-size:20px;">Your balance is enough to buy this product.</span>
    </div>
    <input name="commit" class="product_button_buy" type="submit" value="Continue" style="right:60px;"/>
  <% else %>
    <div>
      Your money balance is not enough.
      You would be charged $<%= format_num(current_user.extra_money_for(cart_amount)) %>
      <br/>
    </div>
    <input name="commit" class="product_button_buy" type="submit" value="Continue" style="right:60px;"/>
  <% end %>
<% end %>
