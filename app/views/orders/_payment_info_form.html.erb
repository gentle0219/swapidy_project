<%= form_for(@order, :as => 'order', :url => "/orders/shipping_info", :html => {:id => "new_order"}) do |f| %>
  <%= f.hidden_field :shipping_first_name %>
  <%= f.hidden_field :shipping_last_name %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :shipping_optional_address %>
  <%= f.hidden_field :shipping_city %>
  <%= f.hidden_field :shipping_state %>
  <%= f.hidden_field :shipping_zip_code %>
  <%= f.hidden_field :shipping_country %>
  
  <div class="payment_product_info"><br/>
    <label style="color:#38B4DE; padding-top: 10px;">Current Balance:</label>
    <span style="color:#38B4DE; font-family:'myriad'">$ <%= format_num(current_user.balance_amount) %> </span>
  </div>
  <div class="payment_product_info">
  	<br/>
  	<% if cart_amount < 0 %>
		  <label style="color:#38B4DE; font-family:'myriad';">You get:</label>
		  <span style="color:#38B4DE; font-family:'myriad'; font-size:20px;">
		  	$ <%= format_num(-cart_amount) %> 
		  </span>
		<% else %>
		  <label style="color:#38B4DE; font-family:'myriad';">You pay:</label>
		  <span style="color:#38B4DE; font-family:'myriad'; font-size:20px;">
		  	$ <%= format_num(cart_amount) %> 
		  </span>
		<% end %>
	</div>	
  <% if cart_amount > 0 && current_user.balance_amount && current_user.balance_amount < cart_amount %>
	  <div class="payment_product_info">
	  	<br/>
			<label style="color:#38B4DE; font-family:'myriad';">You will be charged:</label>
	  	<span style="color:#38B4DE; font-family:'myriad'; font-size:20px;">
	  		$ <%= format_num(cart_amount) %> - $ <%= format_num(current_user.balance_amount) %>
		  </span>
		</div>
  <% end %>
  <input name="commit" class="product_button_buy" type="submit" value="Continue" style="right:60px;"/>
<% end %>
