<%= form_for(@order, :as => 'order', :url => "/orders/shipping_info", :html => {:id => "new_order"}) do |f| %>
  <%= f.hidden_field :shipping_first_name %>
  <%= f.hidden_field :shipping_last_name %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :shipping_optional_address %>
  <%= f.hidden_field :shipping_city %>
  <%= f.hidden_field :shipping_state %>
  <%= f.hidden_field :shipping_zip_code %>
  <%= f.hidden_field :shipping_country %>
 <br />
 <br />
 <br />
 <br />
 <% if session[:shop_type] != "sell"%>  		
  <div class="payment_product_info"><br/>
    <label style="color:black; padding-top: 10px;">Current Balance:</label>
    <span style="color:black; font-family:'myriad'"><%= number_to_currency(current_user.balance_amount) %> </span>
  </div>
  <% end %>
  <div class="payment_product_info">
  	<% 
  		remaining_amount = current_user.balance_amount - ShoppingCart.cart_amount 
  		amount = remaining_amount < 0 ? remaining_amount*-1 : 0
  	%>
  		
  	<% if session[:shop_type] == "sell"%>  		
			<br />	
		  <label style="color:black; font-family:'myriad';" >It should just You get:</label>
	  	<span style="color:black; font-family:'myriad'; font-size:20px;">	
		  	<%= number_to_currency((ShoppingCart.sell_cart_amount))%>				
	  	</span>
	  <% elsif session[:shop_type] == "buy"%>
	  	<%= number_to_currency(current_user.balance_amount) %> - 
  		<%= number_to_currency(ShoppingCart.buy_cart_amount) %> = 
  		<%= number_to_currency(current_user.balance_amount - ShoppingCart.buy_cart_amount) %>
	  	<br />
			<br />	
		
			<label style="color:black; font-family:'myriad';" >Total due today: </label>
			<span style="color:black; font-family:'myriad'; font-size:20px;">	
  			<%= number_to_currency( amount ) %>
  		</span>	<br/><br/>

  		<% remaining_amount = remaining_amount < 0 ? 0 : remaining_amount %>
			<label style="color:black; font-family:'myriad';" >Remainig balance:</label>
  		<span style="color:black; font-family:'myriad'; font-size:20px;">	
  			<%= number_to_currency( remaining_amount ) %>
  		</span>			
		
  	<% else %>
  		<br/>
			<%= number_to_currency(current_user.balance_amount) %> 
  			+ <%= number_to_currency(ShoppingCart.sell_cart_amount) %> 
  			- <%= number_to_currency(ShoppingCart.buy_cart_amount) %> 
  			= <%= number_to_currency(current_user.balance_amount - ShoppingCart.cart_amount) %>
	  	<br />
			<br />	
				
					<label style="color:black; font-family:'myriad';" >Total due today: </label>
					<span style="color:black; font-family:'myriad'; font-size:20px;">	
		  			<%= number_to_currency( amount ) %>
		  		</span>	<br/><br/>

		  		<% remaining_amount = remaining_amount < 0 ? 0 : remaining_amount %>
					<label style="color:black; font-family:'myriad';" >Remainig balance:</label>
		  		<span style="color:black; font-family:'myriad'; font-size:20px;">	
		  			<%= number_to_currency( remaining_amount ) %>
		  		</span>
		  		
		  		
	  		
					<!-- 
						<% if current_user.balance_amount - ShoppingCart.cart_amount > 0 %>
							<%= number_to_currency(ShoppingCart.cart_amount-current_user.balance_amount)%>
						<% else %>
							<%= number_to_currency(ShoppingCart.cart_amount-current_user.balance_amount)%>
						<% end %>
					-->
					</span>
	  		
  	<% end %>

  	<br/>
  	
	  <br/>
<!--	  
	  <br/>
	  <label style="color:black; font-family:'myriad';">Payment options:</label><br/>
  	<input type="radio" name="order[payment_option]" value="direct" checked="checked"/>Direct &nbsp;&nbsp;&nbsp;
  	<input type="radio" name="order[payment_option]" value="pre_authorize" disabled="disabled"/>Pre-authorize
	  <br/>
-->	  
	</div>	
  <input name="commit" class="product_button_buy" type="submit" value="Continue" style="position:relative; bottom:30px; right:70px;"/>
<% end %>
