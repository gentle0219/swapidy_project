%input{:name => "authenticity_token", :type => "hidden", :value => form_authenticity_token}/
%div
  %label{:for => "user_paypal_email"} Certified name
  %br/
  %input#user_email{:name => "user[certified_name]", :size => "30", :type => "text", :value => user.certified_name}/
- unless session[:signed_in_via_facebook]
  %div
    %label{:for => "user_current_password"} Current Password
    %i (we need your current password to confirm your changes)
    %br/
    %input#user_current_password{:name => "user[current_password]", :size => "30", :type => "password"}/
%div
  - if !user.errors.empty? || @error_message
    .alert.alert-error
      = user.errors.full_messages.join('.')
      = @error_message if @error_message
  - elsif @success_message
    .alert.alert-success= @success_message
  %input.update_button_buy{:type => "submit", :value => "Update"}/