<% if cart_products_empty? %>
<div>Empty Shopping Cart</div>  
<% else %>
 <div>
	  <button class="prev product_button_buy" style="width: 30px;position: absolute;top:60px;left: -110px;">&lt;</button>
	  <button class="next product_button_buy" style="width: 30px;position: absolute;top: 60px;left: 60px;">&gt;</button>
  <div class="order_sell_display" style="float:left; width: 45%;overflow: hidden;left: 80px !important;top: 40px" >
  	<ul>
		<% cart_products[:sell].each do |order_product|%>
	    	<li style="height:120px;width: 120px"> <img style=" max-width: 100px; max-height: 100px;" src="<%= Product.find(order_product.product_id).main_image_url(:thumb) %>" /> </li>
   		<% end %>
    </ul>
  </div>
	  <button class="prev_buy product_button_buy" style="width: 30px;top: 60px;right: 180px;position: absolute;">&lt;</button>
	  <button class="next_buy product_button_buy"style="width: 30px;top: 60px;right: 20px;position: absolute">&gt;</button>
  <div class="order_buy_display" style="float:right; width: 45%; text-align: right; overflow:hidden;left: -80px !important;top: 40px" >
  	<ul>
    	<% cart_products[:buy].each do |order_product| %>
    		<li style="height: 120px;width: 120px"> <img style=" max-width:100px; max-height: 100px;" src="<%= Product.find(order_product.product_id).main_image_url(:thumb) %>" /></li>
    	<% end %>
    </ul>
  </div>
 </div>
<% end %>
