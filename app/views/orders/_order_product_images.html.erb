<% if cart_products_empty? %>
<div>Empty Shopping Cart</div>  
<% else %>
 <div>
	  <button class="prev product_button_buy" style="width: 30px;position: absolute;top:60px;left: -130px;">&lt;</button>
	  <button class="next product_button_buy" style="width: 30px;position: absolute;top: 60px;left: 0px;z-index: 1000">&gt;</button>
  <div class="order_sell_display" style="float:left; width: 45%;overflow: hidden;left: 30px !important;top: 40px" >
  	<ul>
		  <% cart_products[:sell].each do |order_product|%>
	    	<li style="height:120px;width: 120px"> <img style=" max-width: 100px; max-height: 100px;" src="<%= Product.find(order_product.product_id).main_image_url(:thumb) %>" /> </li>
   		<% end %>
    </ul>
  </div>
	  <button class="prev_buy product_button_buy" style="width: 30px;top: 60px;right: 140px;position: absolute;z-index: 1000">&lt;</button>
	  <button class="next_buy product_button_buy"style="width: 30px;top: 60px;right: 10px;position: absolute">&gt;</button>
  <div class="order_buy_display" style="float:right; width: 45%; text-align: right; overflow:hidden;left: -30px !important;top: 40px" >
  	<ul>
    	<% cart_products[:buy].each do |order_product| %>
    		<li style="height: 120px;width: 120px"> <img style=" max-width:100px; max-height: 100px;" src="<%= Product.find(order_product.product_id).main_image_url(:thumb) %>" /></li>
    	<% end %>
    </ul>
  </div>
 </div>
<% end %>
