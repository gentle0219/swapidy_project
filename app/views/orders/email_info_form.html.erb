<style type="text/css">
label{
  color:#666;
  font-size: 15px;
}
</style>
<div id="progress_indicator" class="three_steps">
  <ul>
      <li class="current"><strong>Step 1</strong></li>
      <li>Step 2</li>
      <li>Step 3</li>
  </ul>
</div>
<div class="container">

<div style="float: left; width: 50%;">
  <h2 class="cat_choose">Signing with your email </h2>
  <form accept-charset="UTF-8" action="/users/sign_in" class="edit_user" id="edit_user" method="post">
    <% if @signin_failure %>
      <div style="color: red;">
        Invalid username or password.
      </div>
    <% end %>
    <input type="hidden" name="login_to_order" value="1" />
    <input type="hidden" name="product_id" value="<%= @product.id %>" />
    <input type="hidden" name="order_type" value="<%= @order.order_type %>" />
    
    <div><label for="user_email">Email</label><br />
    <input id="user_email" name="user[email]" size="30" type="email" value="" /></div>
  
    <div><label for="user_password">Password</label><br />
    <input id="user_password" name="user[password]" size="30" type="password" /></div>
  
    <div style="margin:0px; margin-top:20px;">
      <input name="commit" class="show_button_buy" style="width: 220px; height: 70px; padding: 8px 15px;" type="submit" value="Sign in" />
    </div>
  </form>
</div>

<div style="float: right; width: 50%;">
  <h2 class="cat_choose">Signup new account </h2>
  <p class="product_desc">We'll use this email address to send you shipping details and progress updates every step of the way.</p>
  <% @user = resource || User.new unless @user %>
  <%= form_for(@user || resource, :as => "user", :url => registration_path(@user)) do |f| %>
    <input type="hidden" name="login_to_order" value="1" />
    <input type="hidden" name="product_id" value="<%= @product.id %>" />
    <input type="hidden" name="order_type" value="<%= @order.order_type %>" />
    <% if @user_for_register && !@user.errors.empty? %>
      <div style="color: red;">
        <%= raw @user.errors.full_messages.join(". ") %>
      </div>
    <% end %>
      
    <div><%= f.label :email %></div>
    <%= f.email_field :email %>
  
    <div><%= f.label :password %></div>
    <%= f.password_field :password %>
  
    <div><%= f.label :password_confirmation %></div>
    <%= f.password_field :password_confirmation %>
    <div style="margin:0px; margin-top:20px;">
      <input name="commit" class="show_button_sell" style="width: 220px; height: 70px; padding: 8px 15px;" type="submit" value="Sign up" />
    </div>
  <% end %>
</div>
</div>