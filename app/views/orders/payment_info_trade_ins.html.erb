<style type="text/css">
label{
  color:#38B4DE;
  font-size: 15px;
}
#checkout_content{
  color:#666;
}
</style>

<div id="progress_indicator" class="three_steps">
  <ul>
    <li>
      Step 1
    </li>
    <li class="current">
      <strong>Step 2</strong>
    </li>
    <li>
      Step 3
    </li>
  </ul>
</div>
<div class="container">
<h2 style="color:#fa3e6e;">Payment information</h2>

<div id="checkout_content" class="payment_editing_block">
  <div class="payment_group_contents">
    <div class="valid_form payout_form standard_form paypal" style="display: block;">
      
      <%= form_for(@order, :as => 'order', :url => "/orders/shipping_info") do |f| %>
        <%= f.hidden_field :order_type %>
        <%= f.hidden_field :product_id %>
  
        <%= f.hidden_field :shipping_first_name %>
        <%= f.hidden_field :shipping_last_name %>
        <%= f.hidden_field :shipping_address %>
        <%= f.hidden_field :shipping_optional_address %>
        <%= f.hidden_field :shipping_city %>
        <%= f.hidden_field :shipping_state %>
        <%= f.hidden_field :shipping_zip_code %>
        <%= f.hidden_field :shipping_country %>
        
        <div>
          <label><%= @product.title %></label><br />
          <img src="<%= @product.main_image_url(:large) %>">
        </div>

        <div>
          <label>After selling, you get:</label>
          <span style="font-weight:bold"><%= format_num(@product.honey_price) %> Honey</span>
        </div>
          <br/>
        <div>
          <i>Your balance would increase to <%= format_num(current_user.honey_balance + (@product.honey_price || 0)) %> Honey after selling.</i>
          <br />You could use the Honey money to buy something.
        </div>
        
        <br/>
        <div class="buttom_buy"><%= f.submit "Continue" %></div>
      <% end %>
    </div>
  </div>
</div>
</div>