<style type="text/css">
body{
  background: whitesmoke;
}
</style>

<div class="container">
<h2 class="headings_pink">Confirm your details</h2>
<p class="confirm_subheading">Please confirm the following information is correct.</p>

<%= form_for(@order, :as => 'order', :url => "/orders/create") do |f| %>
  <%= f.hidden_field :order_type %>
  <%= f.hidden_field :product_id %>
  <%= f.hidden_field :using_condition %>
  <%= f.hidden_field :honey_price %>
  <%= f.hidden_field :token_key %>

  <%= f.hidden_field :shipping_first_name %>
  <%= f.hidden_field :shipping_last_name %>
  <%= f.hidden_field :shipping_address %>
  <%= f.hidden_field :shipping_optional_address %>
  <%= f.hidden_field :shipping_city %>
  <%= f.hidden_field :shipping_state %>
  <%= f.hidden_field :shipping_zip_code %>
  <%= f.hidden_field :shipping_country %>
  <%= f.hidden_field :shipping_zip_code_add_on %>
  <%= f.hidden_field :is_candidate_address %>

  <br/>
  <div class="confirm_container">
  <div>
    <label class="confirm_info_head"><%= @order.title %></label><br />
    <img id="confirm_image" src="<%= @product.main_image_url(:large) %>">
  </div>
  
  <br/>
  <div>
    <label class="confirm_info_head">
      <strong>Contact Email</strong>
      <a href="#" onclick="javascript:open_in_new_tab('/users/edit');" class="order_button_buy change">Change</a>
    </label class="confirm_info_head"><br />
    <strong>All emails about your order will be sent here:</strong>
    <p><%= current_user.email %></p>
  </div>
  <br/>
  <div>
    <label class="confirm_info_head">
      <strong>Payment Information</strong>
    </label>
    <div>
      <span>Current Balance:</span>
      <%= format_num(current_user.honey_balance) %> Honey
    </div>
    <div>
      <span>Product Price:</span>
      <%= format_num(@product.honey_price) %> Honey
    </div>
    <div>
      Your balance would increase to <%= format_num(current_user.honey_balance + (@product.honey_price || 0)) %> Honey after selling.
      <br />You could use the Honey money to buy something.
      <% if current_user.payment_ready? %>
        <a href="#" onclick="javascript:open_in_new_tab('/payments/new');" class="btn btn-success btn-mini">Get more Honey</a>
      <% else %>
        <br />Your payment has not verified. To get more Honey, please edit <a href="javascript:open_in_new_tab('/users/edit#card_info_container');" class="order_link">Card Information of your Profile</a>.  
      <% end %>
    </div>
  </div>
  <br/>
  <div>
    <label class="confirm_info_head">
      <strong>Shipping Details</strong>
      <a href="#" onclick="javascript:changeTo('/orders/shipping_info');" class="order_button_buy change">Change</a>
    </label>
    <p>
      <%= @order.shipping_first_name %> <%= @order.shipping_last_name %><br />
      <%= @order.shipping_address %><br />
      <%= @order.shipping_optional_address %>
      <%= @order.shipping_city %><br />
      <%= @order.shipping_state %><br />
      <%= @order.shipping_zip_code %><br />
      <%= @order.shipping_zip_code_add_on %><br />
    </p>
  </div>
  <% has_agreement_before = current_user.has_same_order?(@order.order_type) %>
  <div>
    <label class="confirm_info_head"><strong>Terms of service</strong></label>
    <p>
      <input id="terms_of_service_checkbox" type="checkbox" <% if has_agreement_before %>checked="checked"<% end %> /> 
      <span>this box, you agree to our <a class="order_link">terms of service</a> and confirm that 
        the item(s) you are selling have not been reported lost or stolen.</span>
    </p>
  </div>
  <br/>
  <input name="commit" onclick="showPageLoading();" id="submit_button" class="order_button_sell" style="width: 180px; height: 50px;" type="submit" <% unless has_agreement_before %> disabled="disabled" <% end %> value="Continue" />
<% end %>
</div>
</div>
<script>
  function changeTo(new_url) {
    $("#new_order").attr("action", new_url);
    $("#new_order").submit();
  }
  
  $("#terms_of_service_checkbox").live("change", function() {
    if($(this).is(':checked')){
      $("#submit_button").prop('disabled', false);
    }else{
      $("#submit_button").prop('disabled', true);
    }
  });
  
</script>


