<style type="text/css">
body{
  background: whitesmoke;
}
</style>
<div class="content " style="position: absolute; width:100%; min-height:550px; height: 700px; background-repeat:no-repeat; background-position: 0px 0px; top: 60px; left: 0px; background-image:url(/images/checkout/bg-2.jpg); -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;">

<%= render :partial => "steps", :locals => {:current_step => 2 } %>
<div class="container">
  <div class="headings_pink payment_info_heading">Payment Information</div>
     <div class="payment_product_image">
            <img  class="payment_product_img" src="<%= @product.main_image_url(:large) %>">
          </div>
<div class="payment_container">

<div id="checkout_content" class="payment_editing_block">
  <div class="payment_group_contents">
    <div class="valid_form payout_form standard_form paypal" style="display: block;">
      
      <%= form_for(@order, :as => 'order', :url => "/orders/shipping_info", :html => {:id => "new_order"}) do |f| %>
        <%= f.hidden_field :order_type %>
        <%= f.hidden_field :product_id %>
        <%= f.hidden_field :token_key %>
        <%= f.hidden_field :using_condition %>
        <%= f.hidden_field :honey_price %>
  
        <%= f.hidden_field :shipping_first_name %>
        <%= f.hidden_field :shipping_last_name %>
        <%= f.hidden_field :shipping_address %>
        <%= f.hidden_field :shipping_optional_address %>
        <%= f.hidden_field :shipping_city %>
        <%= f.hidden_field :shipping_state %>
        <%= f.hidden_field :shipping_zip_code %>
        <%= f.hidden_field :shipping_country %>
        
        <br/><div class="payment_product_info">
          <%= @order.title %><br /><br/>

          <label style="color:#666">Current Balance:</label>
          <span style="color:#666; font-family:'myriad'"><%= format_num(current_user.honey_balance) %> </span><img class="payment_currency" src="/images/honey_20px_grey.png">
        </div>
        <div style="position:relative; bottom:20px;">
          <label style="color:#666; font-family:'myriad';">Product Price:</label><span style="color:#666; font-family:'myriad'; font-size:20px;">&nbsp;<%= format_num(@order.honey_price) %> </span><img class="payment_currency" src="/images/honey_20px_grey.png">
        </div>
          <br/>
        <% if current_user.extra_honey_for(@order) <= 0 %>
          <div >
            <br/>
            <span style="font-size:20px; position:relative; bottom:50px;">Your balance is enough to buy this product.</span>
          </div>
          </div>
          <br/>
          <br/>

    
 <input name="commit" class="product_button_buy" type="submit" value="Continue" style="position:relative; bottom:100px; right:60px;"/>        <% else %>
          <div>
            Your Honey balance is not enough. You need
            <%= format_num(current_user.extra_honey_for(@order)) %> Honey to buy this product.
          </div>
          <div>
            <% if current_user.payment_ready? %>
              You would be charged $<%= format_num(current_user.extra_honey_for(@order)/100) %> (Exchange Rate: 100 Honey / $1 )
              <a href="#" onclick="javascript:showPopup('popup-dialog_add_honey');" class="order_button_sell">Get more Honey</a>
            <% else %>
              <a href="#" onclick="javascript:showPopup('popup-dialog_add_honey');" class="order_button_sell" style="position:relative; top:58px; left:150px; font-size:20px;">Get more Honey</a>
            <% end %>
          </div>
          <br/>
          <a href="/" class="show_button_buy buy_cancel">Cancel</a>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
