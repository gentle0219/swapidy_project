<div id="progress_indicator" class="three_steps" style="overflow: hidden;margin: 0 auto;text-align: center;width: 60%;">
  <ul>
    <% (1..3).to_a.each do |step| %>
      <% if step < current_step && step == 2 %>
        <li class="active_step">
          <a href="#" onclick="switchToCheckoutStep('new_order', '/orders/<%= @order.is_order? ? "buy" : "sell" %>/<%= @order.product_id %>');" >Step <%= step %></a>
        </li>
      <% else %>
        <li <% if step == current_step %> class="current" <% end %> >
          Step <%= step %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>