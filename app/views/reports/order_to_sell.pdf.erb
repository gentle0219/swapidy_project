<h1>Trade Ins Number: <%= @order.id %> </h1>
<p>Created at: <%= @order.created_at %></p>
<br/>

<h2>Item: <%= @order.product.title %></h2>
<p>
  <u><i>Model:</i> <strong><%= @product.product_model.title %></strong></u><br/>
  <% @product.product_model_attributes.each do |model_attribute| %>
    <i><%= model_attribute.category_attribute.title %></i>: <strong><%= model_attribute.value %></strong><br/>
  <% end %>
</p>
<p><i>Using condition</i>: <strong><%= @product.using_condition %></strong></p>
<p><strong><i>Price</i>: <%= @product.honey_price %> Honey</strong></p>

<h2>Shipping from</h2>
<p>
  <%= @order.shipping_first_name %> <%= @order.shipping_last_name %><br />
  <%= @order.shipping_address %><br />
  <%= @order.shipping_optional_address %>
  <%= @order.shipping_city %><br />
  <%= @order.shipping_state %><br />
  <%= @order.shipping_zip_code %><br />
  <%= @order.shipping_country %><br />
</p>

<h2>Shipping Label</h2>
<i>(Next page)</i>
<table style="page-break-before: always; width:100%; height:100%; border: 2px;">
  <tr>
    <td height="50px" style="border-right: none; text-align: left;">
      <img src="<%= File.expand_path(Rails.root) %>/public/images/swapidy_logo.png" style="height: 50px;">
    </td>
    <td style="border-left: none; text-align: right;">
    </td>
  </tr>
  <tr height="500px;" >
    <td colspan="2">
      <img src="http://www.swapidy.com/images/swapidy_logo.png" style="width:400px; height:auto;" >
    </td>
  </tr>
</table>

