%li
	.row
		.span1
			%img{:src => order_product.product.main_image_url(:thumb), :style => "height: 80px;" }/
		.span3{:style => "margin-top: 20px;"}
			%span
				= order_product.title 
			%br
			= number_to_currency(order_product.price)

		.span1{:style => "width: 40px; margin-top: 20px;"}
			%a.del-product{:href => "#", :order_product_id => order_product.order_product_id, :title => "Delete", :style => "position:relative; bottom:80px; left:280px;"}	
			