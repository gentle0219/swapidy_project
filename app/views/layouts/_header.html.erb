<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/"><img src="/images/swapidy_logo.png" style="height:50px"></a>
      <ul class="nav pull-right">
        <% if user_signed_in? %>
          <li>
            <div class="profile_info_nav">
              <div style="display: inline-block;"><%= link_to(current_user.full_name, settings_path, :method => :get) %></div>
              <div style="display: inline-block;">(HONEY <%= format_num(current_user.honey_balance)%></div>
              <div style="display: inline-block;"><%= link_to("+", "/payments/new", :method => :get, :class => "plushoney_icon") %>)</div>
            </div>
          </li>
          <% if current_user.is_admin? %>
            <li>
              <%= link_to('ADMIN', rails_admin_path, :method => :get) %>
            </li>
          <% end %>
          <li>
            <%= link_to('LOGOUT', destroy_user_session_path, :method => :delete) %>
          </li>
        <% else %>
          <li id="nav_login">
            <div id="loginButton">
            <a href="#">LOGIN</a>
            </div>
                  <div id="loginBox">
                    <form id="loginForm">
                        <fieldset id="body">
                            <fieldset>
                                <label for="email">Email Address</label>
                                <input type="text" name="email" id="email" />
                            </fieldset>
                            <fieldset>
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" />
                            </fieldset>
                            <input type="submit" id="login" value="Sign in" />
                            <label for="checkbox"><input type="checkbox" id="checkbox" />Remember me</label>
                        </fieldset>
                        <span><a href="#">Forgot your password?</a></span>
                    </form>
                  </div>
          </li>
           <li class="divider-vertical"></li>
          <li id="nav_signup">
            <%= link_to "SIGN UP", new_user_registration_path%>
          </li>
          <li class="divider-vertical"></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<% if user_signed_in? %>
  <div>
    <strong>Signed in as <%= current_user.first_name %></strong>
  </div>
<%end%>


<%= render :partial => "/layouts/orders.html" if current_user %>
