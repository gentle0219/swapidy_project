<li class="dropdown">
  <div class="profile_info_nav">
    <% if current_user.provider_image && !current_user.provider_image.blank? %>
      <img class="nav_icons nav_profile" src="<%= current_user.provider_image.gsub('http://', 'https://') %>">
    <% else %>
      <img class="nav_icons nav_profile" src="/images/profile_icon.png">
    <% end %>
    <%user_amount = current_user.balance_amount > 0 ? current_user.balance_amount : 0%>
    <%= link_to(current_user.full_name.upcase, transactions_path, :method => :get) %>:$<%= format_num(user_amount)%>

  </div>
</li>
