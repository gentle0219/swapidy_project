<!DOCTYPE html>
<html>
  <head>
    <%= render :partial => "/layouts/title_and_link_resources" %>
  </head>
  <body>
    
    <script type="text/javascript" src="/javascripts/jquery.pageslide.min.js"></script>
    <%= render :partial => "/layouts/header" %>
                
    <div id="s3slider">
      <ul id="s3sliderContent">
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-1.jpg">
          <span></span>
        </li>
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-2.jpg">
          <span></span>
        </li>
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-3.jpg">
          <span></span>
        </li>
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-4.jpg">
          <span></span>
        </li>
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-5.jpg">
          <span></span>
        </li>
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-6.jpg">
          <span></span>
        </li>
        <li class="s3sliderImage">
          <img src="/images/sliders/slide-7.jpg">
          <span></span>
        </li>
        <div class="clear s3sliderImage"></div>
      </ul>
    </div>
    
    <script language="JavaScript">
       $(document).ready(function() { 
         $('#s3slider').s3Slider({
           timeOut: 3000
         });
       });
    </script>

    <div class="content">
      <div class="container">
        <%=yield %>
      </div>
    </div>
 
    <%= render :partial => "/layouts/footer.html" %>
  </body>
</html>
