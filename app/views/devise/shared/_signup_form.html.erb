<div id="signup_container" style="position:fixed;">
  <img id="signup_circle" src="/images/login_circle_new.png" >
  <!-- a href="/auth/facebook"><img id="fb_signup" src="/images/fb_signup.png"></a-->
  <a href="<%= user_omniauth_authorize_path(:facebook)%>"><img id="fb_signup" src="/images/fb_signup.png"></a>
  <p class="login_or"><span>or</span></p>
  <div id="signup_form" style="display:none;">
    <div id="login_form">
    <div class="input-prepend">
  <span class="add-on">E-mail</span>
  <input class="span2" id="prependedInput" type="text" placeholder="E-mail address">
  </div><br/>
  <div class="input-prepend">
<span class="add-on">Password</span>
<input class="span2" id="prependedInput" type="password" placeholder="Password">
</div>
<a href="#" class="login_button" style="color:white;">Login</a></div>
<a href="#" class="login_forgot">Forgot your password?</a>
<div class="login-footer"><p class="signup-link">Don't have a login?
<a rel="internal silent" href="/session/signup">Sign Up.</a>
</p>
</div>
    
    <div><%= form_for(resource, :as => resource_name, :url => registration_path(resource)) do |f| %>
      <div class="signup_field"><%= f.label :email %></div>
      <%= f.email_field :email %>
  
      <div class="signup_field"><%= f.label :password %></div>
      <%= f.password_field :password %>
  
      <div class="signup_field"><%= f.label :password_confirmation %></div>
      <%= f.password_field :password_confirmation %>
      <div class="signup_field">
        <%= f.submit "Sign up" %>
        <% if show_cancel_link %>
          <a href="javascript:hidePopup();" style="color: black; padding-left: 30px;">Cancel</a>
        <% end %>
        <% unless resource.errors.empty? %>
          <span style="color: red;">
            !!! <%= raw resource.errors.full_messages.first %>.
          </span>
        <% end %>
      </div>
    <% end %>
  </div>

</div>  