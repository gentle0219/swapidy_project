<script type="text/javascript" src="https://js.stripe.com/v1/"></script>
<script type="text/javascript">
  Stripe.setPublishableKey('<%= StripeGateway.payment_public_key %>');
  function <%= submit_form %>_card_validate() {
    var form = $("#<%= submit_form %>");
    form.find("#cardInfoValidate").hide();
    
    // do nothing if users don't enter Card information
    if(form.find('#<%= field_prefix %>new_card_name').val() == '' && form.find('#<%= field_prefix %>new_card_number').val() == '' && form.find('#<%= field_prefix %>new_card_cvc').val() == '' &&
        form.find('#<%= field_prefix %>new_card_expired_month').val() == '' && form.find('#<%= field_prefix %>new_card_expired_year').val() == '') {
        form.submit();
        return true;
    }

    // given a valid form, submit the payment details to stripe
    //$(form['submit-button']).attr("disabled", "disabled")
    Stripe.createToken({
      number: form.find('#<%= field_prefix %>new_card_number').val(),
      cvc: form.find('#<%= field_prefix %>new_card_cvc').val(),
      exp_month: form.find('#<%= field_prefix %>new_card_expired_month').val(),
      exp_year: form.find('#<%= field_prefix %>new_card_expired_year').val()
    }, 100, function(status, response) {
      if (response.error) {
        form.find("#cardInfoValidate").show();
        // re-enable the submit button
        //$(form['submit-button']).removeAttr("disabled")

        // show the error
        form.find(".payment-errors").html(response.error.message);
      } else {
        // token contains id, last4, and card type
        form.find("#<%= field_prefix %>new_stripe_card_token").val(response['id']);
        form.find("#<%= field_prefix %>new_card_type").val(response['card']['type']);
        form.find("#<%= field_prefix %>new_card_last_four_number").val(response['card']['last4']);
        form.find("#<%= field_prefix %>new_card_number").val('');
        form.find("#<%= field_prefix %>new_card_cvc").val('');
        // insert the stripe token
        // and submit
        form.submit();
      }
    });
    return false;
  }
</script>
<div id="card_info_container" class="span12" style="margin-left: 0px;">
  <div class="headings_pink_edit">Card Information</div>
  <%= f.hidden_field :card_name %>
  <%= f.hidden_field :card_last_four_number %>
  <%= f.hidden_field :card_expired_month %>
  <%= f.hidden_field :card_expired_year %>

  <div>
    <strong>Edit Card Information</strong><br/>
    (leave blank if you don't want to change it)
  </div>
  <div>
    <%= f.label :card_name %><br />
    <%= f.text_field :new_card_name, :size => 20 %>
  </div>
  <div>
    <%= f.label :card_number %><br />
    <%= f.text_field :new_card_number, :size => 20, :class => "card-number" %>
  </div>
  <div>
    <%= f.label :card_expired_date %><br />
    <%= f.select :new_card_expired_month, month_options, {:prompt => 'Month', :class => "card-expiry-year"} %>
    <%= f.select :new_card_expired_year, year_options, {:prompt => 'Year', :class => "card-expiry-year"} %>
  </div>
  <div>
    <%= f.label :card_cvc %><br />
    <%= f.text_field :new_card_cvc, :size => 20, :class => "card-cvc" %>
    <%= f.hidden_field :new_stripe_card_token %>
    <%= f.hidden_field :new_card_type %>
    <%= f.hidden_field :new_card_last_four_number %>
  </div>
  <div id="cardInfoValidate" style="display: none;">
    <div class="payment-errors" style="color: red;"></div>
  </div>
</div>

